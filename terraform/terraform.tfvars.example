# Copy to terraform.tfvars and adjust per project

# Core
app_name              = "myapp"
location              = "westeurope"
environment           = "production"

# AKS
kubernetes_version    = "1.33"
node_count            = 3
node_vm_size          = "Standard_B2s"

# Container image
# Example: "myregistry.azurecr.io/myapp:1.0.0" or "dockerhubuser/myapp:latest"
docker_image          = "baltzar1994/paytrackr:latest"

# Database
postgres_admin_username = "dbadmin"
postgres_admin_password = "REPLACE_ME"
# Optional overrides (otherwise derived from app_name)
# resource_group_name   = "myapp-rg"
# cluster_name          = "myapp-aks"
# app_namespace         = "myapp"
# postgres_database_name= "myapp"
